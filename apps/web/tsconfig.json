{
    "extends": "@workspace/typescript-config/nextjs.json",
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@/components/*": ["./components/*"],
            "ui": ["../../packages/ui/src/index.ts"],
            "ui/styles/*": ["../../packages/ui/src/styles/*"],
            "@workspace/ui/tailwind.config": ["packages/ui/tailwind.config.ts"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "next.config.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
